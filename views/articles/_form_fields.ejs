<div class="card-body">
    <div class="form-group my-2">
        <label for="title" class="form-label">Title</label>
        <input required type="text" name="title" id="title" value="<%= article.title %>" class="form-control" placeholder="Enter Title Here" />
    </div>

    <div class="form-group my-2">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" name="description" id="description" class="form-control">
            <%= article.description %> 
        </textarea>
    </div>

    <div class="form-group my-2">
        <label for="markdown" class="form-label">Markdown</label>
        <textarea required type="text" name="markdown" id="markdown" class="form-control">
            <%= article.markdown %> 
        </textarea>
    </div>   
</div>

<div class="card-footer">
    <a href="/" class="btn btn-danger w-25">Cancel</a>
    <button type="submit" class="btn btn-success w-25">Save</button>
</div>
